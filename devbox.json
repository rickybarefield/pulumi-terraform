{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.11.0/.schema/devbox.schema.json",
  "packages": [
    "python@latest",
    "yarn@latest",
    "golangci-lint@latest",
    "go@latest",
    "jdk@latest",
    "dotnet-sdk@latest",
    "pulumictl@latest",
    "jetbrains.idea-community@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to pulumi-terraform development environment' > /dev/null",
      ". $VENV_DIR/bin/activate",
      "alias idea-community=\"idea-community > idea.log 2>&1 &\""
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
